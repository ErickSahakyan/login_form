{
	"extends": [
		"react-app",
		"react-app/jest"
	],
	"rules": {
		"no-console": "warn",
		"prefer-const": "error",
		"quotes": [
			"error",
			"single"
		],
		"indent": [
			"warn",
			"tab"
		],
		"max-len": [
			"error",
			{
				"code": 220
			}
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"semi": [
			"warn",
			"always"
		],
		"import/order": [
			"error",
			{
				"groups": [
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index",
					"object",
					"type"
				],
				"newlines-between": "always-and-inside-groups"
			}
		]
	}
}